import random
import math
data = [['O', '0'], ['l', '1'], ['u', 'v']]
number_data = ['A', 'B', 'C', 'D', 'E']
col = 5
row = 4


def start_message():
    print('Input cell number (e.g. A1) of different character')


def section_message():
    print('Level: 1')


def view_question():
    pick = random.randint(0, 2)  # choose a random pair
    # choose random position of a different character
    mistake_number = random.randint(0, (col * row) - 1)
    print('Debug: mistake_number = ', mistake_number)
    print(data[pick])
    # Dynamic column header and dashed line
    question_str1 = '/|'
    question_str2 = '--'
    col_count = 0
    while col_count < col:
        question_str1 += number_data[col_count]
        question_str2 += '-'
        col_count += 1
    print(question_str1)
    print(question_str2)
    char_normal = data[pick][0]  # first element
    char_diff = data[pick][1]  # second element
    position = 0
    row_count = 0
    while row_count < row:  # outer loop for rows
        col_count = 0
        line = str(row_count + 1) + '|'
        while col_count < col:  # inner loop for columns
            if position == mistake_number:
                line += char_diff
            else:
                line += char_normal
            col_count += 1
            position += 1
        print(line)
        row_count += 1
    return mistake_number


def change_input_number(input_str):
    str_data = {'A': 0, 'B': 1, 'C': 2, 'D': 3, 'E': 4}
    # split input string into letter and number
    input_str_split = list(input_str)
    col_number = str_data[input_str_split[0]]
    row_number = int(input_str_split[1]) - 1
    input_number = row_number * col + col_number  # convert to index(0-based)
    return input_number


def is_correct_number(mistake_number, input_number):
    if mistake_number == input_number:
        return True
    else:
        return False


def view_result(is_correct):
    if is_correct:
        print('Correct')
    else:
        print('Wrong')


def change_string(number):
    col_number = number % col
    row_number = math.floor(number / col) + 1
    string = number_data[col_number] + str(row_number)
    return string


def play():  # main part of the game
    section_message()
    mistake_number = view_question()
    choice = input('(E.g. A1)')
    print('Debug: choice = ' + choice)
    input_number = change_input_number(choice)
    print('Debug: input_number = ' + str(input_number))
    is_correct = is_correct_number(mistake_number, input_number)
    view_result(is_correct)
    print('Correct answer is', change_string(mistake_number))


start_message()
play()
